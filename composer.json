{
    "name": "flamarkt/matomo",
    "description": "Connect Flarum with Matomo analytics",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.0",
        "ext-json": "*"
    },
    "authors": [
        {
            "name": "Flamarkt",
            "homepage": "https://flamarkt.org/"
        }
    ],
    "support": {
        "issues": "https://github.com/flamarkt/matomo/issues",
        "source": "https://github.com/flamarkt/matomo",
        "forum": "https://discuss.flarum.org/d/30500"
    },
    "autoload": {
        "psr-4": {
            "Flamarkt\\Matomo\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Matomo",
            "category": "feature",
            "icon": {
                "name": "fas fa-chart-line",
                "backgroundColor": "#266a13",
                "color": "#fff"
            },
            "optional-dependencies": [
                "flamarkt/core"
            ]
        },
        "flamarkt-backoffice": {
            "showInBackoffice": true
        }
    }
}
